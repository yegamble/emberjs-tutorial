<div class="product-details">
  <section>
    <h3>{{@name}}</h3>
    <div class="text-warning">
      <FaIcon @icon="star" />
      <FaIcon @icon="star" />
      <FaIcon @icon="star" />
      <FaIcon @icon="star" />
      <FaIcon @icon="star-half" />
    </div>

    {{!-- Price --}}
    <section class={{unless @isDetails 'h4'}}>
      <del data-test-original-price class="small text-black-50">{{currency @price.original}}</del>
      <i data-test-current-price class="text-danger font-weight-bold">{{currency @price.current}}</i>
    </section>

    {{#if @isDetails}}
      <div class="d-flex justify-content-between align-items-end">
      <div>
        <h5>Colour</h5>
        <div class="product-colors active-{{ @color }}">
          {{#each @colors as |colorInfo|}}
            <span data-test-color class="product-color {{concat 'color-' colorInfo.color}}"
            {{on "click" (fn @onChangeColor colorInfo.color)}}></span>
          {{/each}}
        </div>
      </div>
      <button class="btn btn-info" type="button" {{on "click" this.addToCart}}>
          <FaIcon @icon="shopping-cart" />
        Add to cart
      </button>
      </div>
    {{/if}}
  </section>

</div>